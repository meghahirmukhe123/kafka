	@PostMapping("/getbill")
	public ResponseEntity<ProductDetails> doLogin(@RequestBody ProductDetails details) {
	    // Create a response with the same ProductDetails
	    ResponseEntity<ProductDetails> response = ResponseEntity.ok().body(details);

	    // You can also send this data to Kafka if needed
	    userBill bill = new userBill();
	    bill.setMsg("Bill generated by producer");
	    bill.setProductDetails(details);
	    producer.sendMessage(bill);

	    return response;
	}




}
